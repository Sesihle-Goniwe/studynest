{
   "dependencies": {
      "ngx-markdown": "^20.1.0",
      "pdf-parse": "^2.4.3"
   },
   "scripts": {
      "test": "jest",
      "test:coverage": "jest --coverage"
   },
   "jest": {
      "preset": "jest-preset-angular",
      "setupFilesAfterEnv": [
         "<rootDir>/setup-jest.ts"
      ],
      "testEnvironment": "jsdom",
      "collectCoverage": true,
      "coverageDirectory": "coverage",
      "moduleNameMapper": {
         "^src/(.*)$": "<rootDir>/src/$1"
      },
      "transform": {
         "^.+\\.(ts|js|html)$": "jest-preset-angular"
      },
      "testMatch": [
         "<rootDir>/src/**/*.spec.ts"
      ],
      "moduleFileExtensions": [
         "ts",
         "js",
         "html"
      ],
      "collectCoverageFrom": [
         "src/**/*.ts",
         "!src/main.ts",
         "!src/**/*.module.ts",
         "!src/environments/**",
         "!src/test.ts"
      ]
   },
   "devDependencies": {
      "@types/pdf-parse": "^1.1.5"
   }
}
